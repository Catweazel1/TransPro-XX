<Page
    x:Class="TransPro_XX.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TransPro_XX"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Formulier Printer:"/>
            <ComboBox Name="CmbBxFormPrinter" Style="{StaticResource MyComboStyle}">
                <ComboBoxItem Name="CmbBxItmFormPrinter"/>
            </ComboBox>
            <TextBlock Text="Sticker Printer:"/>
            <ComboBox Name="CmbBxStickerPrinter" Style="{StaticResource MyComboStyle}">
                <ComboBoxItem Name="CmbBxItmStickerPrinter"/>
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>
